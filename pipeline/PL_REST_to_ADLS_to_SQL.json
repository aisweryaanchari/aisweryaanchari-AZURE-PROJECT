{
	"name": "PL_REST_to_ADLS_to_SQL",
	"properties": {
		"activities": [
			{
				"name": "Copy_REST_to_ADLS",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"supportRFC5988": "true"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_REST_Generic",
						"type": "DatasetReference",
						"parameters": {
							"p_endpoint": {
								"value": "@pipeline().parameters.p_endpoint",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_ADLS_Generic",
						"type": "DatasetReference",
						"parameters": {
							"p_container": {
								"value": "@pipeline().parameters.p_adls_container",
								"type": "Expression"
							},
							"p_folder": {
								"value": "@pipeline().parameters.p_adls_folder",
								"type": "Expression"
							},
							"p_file": {
								"value": "@pipeline().parameters.p_file_name",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"p_endpoint": {
				"type": "string",
				"defaultValue": "users"
			},
			"p_adls_container": {
				"type": "string",
				"defaultValue": "input"
			},
			"p_adls_folder": {
				"type": "string",
				"defaultValue": "jsonplaceholder/users"
			},
			"p_file_name": {
				"type": "string",
				"defaultValue": "users.json"
			}
		},
		"annotations": []
	}
}